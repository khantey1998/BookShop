<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="edu.rupp.bookshop.Activity.SignUpActivity">

    <Button
        style="@android:style/Widget.Button.Inset"
        android:layout_width="174dp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/btn_signup"
        android:text="Create An Account"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle" />

    <TextView
        android:id="@+id/txt_haveAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/txt_LogIn"
        android:layout_alignBottom="@+id/txt_LogIn"
        android:layout_alignEnd="@+id/btn_signup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_signup"
        android:layout_toRightOf="@id/txt_haveAcc"
        android:text="Log In"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:id="@+id/txt_LogIn" />
</RelativeLayout>
